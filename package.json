{
  "name": "electron-quick-start",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "tailwindcss": "tailwindcss -i ./src/input.css -o ./dist/style.css --watch",
    "dev": "tailwindcss -i ./src/input.css -o ./dist/style.css && electron .",
    "devp": "npm-run-all --parallel tailwindcss start"
    
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-reloader": "^1.2.3",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.3.5"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "resolve": "^1.22.8",
    "tplink-lightbulb": "^1.7.10"
  }
}
